{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="top"></div>
    <div class="page-header text-center">
        <h1>
            <span class="has">Has</span><span class="mints">Mints</span>
        </h1>
        <h2 class="d-block">
            NFT Collections<br />Articles & Interviews<br />Open Source Code
        </h2>
    </div>

    <div class="container-fluid container-mints py-5">
        <div class="row">
            <div class="col-sm justify-content-center text-center">
                <h3 class="text-center my-2">Who Has Mints ?!</h3>
                <div class="pt-3 pb-3">
                    {% for portfolioName, portfolioUrl in portfolioUrls %}
                        <a href="{{ portfolioUrl }}" class="btn btn-lg btn-primary">
                            {{ portfolioName }}.hasmints.com
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
