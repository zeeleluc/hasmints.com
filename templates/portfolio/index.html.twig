{% extends 'base.html.twig' %}

{% block title %}{{ portfolio_name|title }} Has Mints!{% endblock %}

{% block body_id 'portfolio' %}

{% block body %}
<div class="row">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>{{ portfolio_name|title }} Has Mints!</h1>
                {% for social in portfolio.bioStub.socials %}
                    <a
                        class="badge badge-primary"
                        target="_blank"
                        href="{{ social.url }}"
                        {% if social.description %}
                            title="{{ social.description }}"
                        {% endif %}
                    >
                        {{ social.name }}
                    </a>
                {% endfor %}
                <p class="mt-3 pb-4">
                    {{ portfolio.bioStub.bio }}
                </p>
            </div>
        </div>
    </div>
</div>
{% for chain in portfolio.chains %}
<div class="row row-portfolio row-portfolio-{{ chain.name }}">
    {% include 'portfolio/_chain_partial.html.twig' with {chain, portfolio_name} %}
</div>
{% endfor %}
<div class="container-fluid container-mints py-5">
    <div class="row">
        <div class="col-sm justify-content-center text-center">
            <h3 class="text-center my-2">Who Else Has Mints ?!</h3>
            <div class="pt-3 pb-3">
                {% for portfolio_name, portfolio_url in portfolio_urls %}
                    <a href="{{ portfolio_url }}" class="btn btn-lg btn-primary">
                        {{ portfolio_name }}.hasmints.com
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
